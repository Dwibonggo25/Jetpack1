<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.jetpack1.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/actionDetailFilmLaunch"
            app:destination="@id/detailFilmFregment" />
    </fragment>
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.jetpack1.ui.movie.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" />
    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="com.example.jetpack1.ui.tvshow.TvShowsFragment"
        android:label="fragment_tv_shows"
        tools:layout="@layout/fragment_tv_shows" />
    <fragment
        android:id="@+id/detailFilmFregment"
        android:name="com.example.jetpack1.ui.detailfilm.DetailFilmFragment"
        android:label="fragment_detail_film_fregment"
        tools:layout="@layout/fragment_detail_film" >
        <argument
            android:name="idFilm"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>